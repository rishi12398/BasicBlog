<h1 class="title">
  <%= @post.title %>
</h1>

<p class="date">
  Submitted <%= time_ago_in_words(@post.created_at)%> Ago
  <b><%= link_to '| Edit ',edit_post_path(@post)%></b>
  <b><%= link_to '| Delete', post_path(@post),method: :delete,data: {confirm: 'Are u sure?'}%></b>
</p>

<p class="body">
  <%= @post.body %>
</p>
